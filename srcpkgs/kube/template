# Template file for 'kube'
pkgname=kube
version=0.8.0
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules qt5-qmake qt5-host-tools gettext"
makedepends="qt5-declarative-devel qt5-webengine-devel qt5-webchannel-devel
 qt5-location-devel kmime-devel kcodecs-devel kcalendarcore-devel libsink-devel
 kasync-devel kcontacts-devel gpgme-devel"
